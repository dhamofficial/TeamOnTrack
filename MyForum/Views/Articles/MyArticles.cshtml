
@{
    Layout = null;
}
@model MyForum.Viewmodel.ArticlesContainer
<div class="row">
    <div class="col-md-8">
        @foreach (var item in Model.FeaturedArticles)
        {
            <div class="articleContainer">
                <article class="content">
                    <h4 class="title">@item.Title</h4>
                    <p>@item.ShortDescription</p>
                </article>
                <footer>
                    <div class="row">
                        <div class="pull-left col-md-1">
                            <div class="avatar pull-left">
                                <img src="~/Images/profile-placeholder.png" />
                            </div>
                        </div>
                        <div class="col-md-1 userinfo">
                            @item.CreatedByName
                        </div>
                        <div class="pull-right rightPanel smallComments">
                            <a href="#editArticle/@item.UID">edit</a>/
                            <span>
                                keyword1, tags2 / Category: @item.CategoryName
                            </span>
                        </div>
                    </div>
                </footer>
            </div>
        }
    </div>
    <div class="col-md-4">
        <div class="articleContainer">
            <div class="content">
                <h5 class="title">Categories</h5>
                <ul>
                    @foreach (var item in Model.Categories)
                    {
                        <li><a href="#category/@item.UID">@item.CategoryName</a></li>
                    }
                </ul>
            </div>
        </div> 
    </div>
</div>